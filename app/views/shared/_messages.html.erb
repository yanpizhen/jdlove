<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>" id="flash-alert">
      <%= content_tag :div, msg, id: "flash_#{name}", class: "flash-text" %>
      <button type="button" class="close flash-times" data-dismiss="alert" aria-hidden="true">&times;</button>
    </div>
  <% end %>
<% end %>
